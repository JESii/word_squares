#!/usr/bin/env ruby
require_relative 'lib/word_squares'

@ws = WordSquares.new('word_list')
@word_square = []

def time_generation(dimension)
  puts "Generating #{dimension}-square"
  start = Time.now
@word_square = @ws.generate(dimension)
  stop = Time.now
  puts "This word square:"
  puts @word_square
  puts "took #{stop - start} seconds to generate"
  end


puts "Generating word squares 2-6..."
puts Time.now.strftime("%c")
time_generation(2)
puts Time.now.strftime("%c")
time_generation(3)
puts Time.now.strftime("%c")
time_generation(4)
puts Time.now.strftime("%c")
time_generation(5)
puts Time.now.strftime("%c")
time_generation(6)
puts Time.now.strftime("%c")
